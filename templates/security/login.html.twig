{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="login-card-center">
		<div class="login-card">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}


				<h1 class="">Login</h1>

				<label for="username">Email
				</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>

				<label for="password">Password</label>
				<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

				<div class="link-forgot-password">
					<a href="{{ path('app_forgot_password_request')}}">Password Oubli√©?</a>
				</div>


				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


				<button class="btn btn-lg btn-primary" type="submit">
					Sign in
				</button>

			</form>
			<footer>
				<section class="reseaux-social">
					<div class="reseaux-social-wrapper">
						<img src="images/reseaux-icon/facebook-logo.png" alt="">
						<img src="images/reseaux-icon/twitter-logo.png" alt="">
						<img src="images/reseaux-icon/wechat-logo.png" alt="">
					</div>
				</section>
			</footer>


		</div>
	</div>
{% endblock %}
