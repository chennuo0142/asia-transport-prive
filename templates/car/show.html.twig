{% extends 'base.html.twig' %}

{% block title %}Car
{% endblock %}

{% block body %}
	<h1>Car</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Brand</th>
				<td>{{ car.brand }}</td>
			</tr>
			<tr>
				<th>Model</th>
				<td>{{ car.model }}</td>
			</tr>
			<tr>
				<th>Color</th>
				<td>{{ car.color }}</td>
			</tr>
			<tr>
				<th>Mise En Circulation</th>
				<td>{{ car.buyAt ? car.buyAt|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Seats</th>
				<td>{{ car.seats }}</td>
			</tr>
			<tr>
				<th>Fiche crer
				</th>
				<td>{{ car.createAt ? car.createAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Editer</th>
				<td>{{ car.updateAt ? car.updateAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>

			<tr>
				<th>Energy</th>
				<td>{{ car.energy }}</td>
			</tr>
			<tr>
				<th>MaxBagage</th>
				<td>{{ car.maxBagage }}</td>
			</tr>
			<tr>
				<th>LicensePlate</th>
				<td>{{ car.licensePlate }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_car_index') }}">back to list</a>

	<a href="{{ path('app_car_edit', {'slug': car.slug}) }}">edit</a>

	{{ include('car/_delete_form.html.twig') }}
{% endblock %}
