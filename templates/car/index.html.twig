{% extends 'base.html.twig' %}

{% block title %}Car index
{% endblock %}

{% block body %}
	<h1>Car index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Brand</th>
				<th>Model</th>
				<th>Color</th>


				<th>LicensePlate</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for car in cars %}
				<tr>
					<td>{{ car.id }}</td>
					<td>{{ car.brand }}</td>
					<td>{{ car.model }}</td>
					<td>{{ car.color }}</td>


					<td>{{ car.licensePlate }}</td>
					<td>
						<a href="{{ path('app_car_show', {'slug': car.slug}) }}">show</a>
						<a href="{{ path('app_car_edit', {'slug': car.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="13">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_car_new') }}">Create new</a>
{% endblock %}
