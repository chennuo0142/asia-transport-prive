{% extends 'base.html.twig' %}

{% block title %}Hello DriverSettingController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<h1>Setting</h1>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<fieldset>
		<label>
			<input name="visible" type="checkbox" role="switch" {{ status_checked }}/>
			Afficher le driver sur la page d'accuiel
		</label>

	</fieldset>
	<button class="btn">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}

{% endblock %}
