{% extends 'base.html.twig' %}

{% block title %}Driver index
{% endblock %}

{% block body %}
	<h1>Driver index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Photo</th>

				<th>Name</th>
				<th>FirstName</th>

				<th>Country</th>
				<th>Telephone</th>
				<th>Email</th>
				<th>Visible</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for driver in drivers %}
				<tr>
					<td><img src="{{ asset('/images/uploads/' ~ driver.photo ) | imagine_filter('my_thumb_filter')}} " alt=""></td>
					<td>{{ driver.name }}</td>
					<td>{{ driver.firstName }}</td>

					<td>{{ driver.country }}</td>
					<td>{{ driver.telephone }}</td>
					<td>{{ driver.email }}</td>
					<td>
						{% if driver.isVisible == true %}
							<span class="check_valide_color">Yes{{ ux_icon('tabler:eye-check' , {height:'24px', width:'24px'}) }}</span>
						{% else %}
							No
						{% endif %}
					</td>
					<td>
						<a href="{{ path('app_driver_show', {'slug': driver.slug}) }}">show</a>
						<a href="{{ path('app_driver_edit', {'slug': driver.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="15">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if app.user.compagny %}
		<a href="{{ path('app_driver_new') }}">Create new</a>
	{% else %}
		<p>Pour ajouter un chauffeur, vous devez avoir une societe enregistrer sur votre compte</p>
	{% endif %}


{% endblock %}
