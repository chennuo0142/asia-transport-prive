{% extends 'base.html.twig' %}

{% block title %}Driver
{% endblock %}

{% block body %}
	<h1>Driver</h1>
	<img src="{{ asset('/images/uploads/' ~ driver.photo ) | imagine_filter('my_fixed_filter')}} " alt="">

	<article>
		<header>
			<div class="driver_show_card_title">
				<span>{{ driver.name }}
					{{ driver.firstName }}</span>
				<span>Visible home page:
					{{ visibility }}</span>
				<span>
					<a href="{{ path('app_moderator_driver_validation',{id:driver.id}) }}">
						<button>Valider</button>
					</a>
				</span>
			</div>
		</header>
		<div>{{ ux_icon('tabler:cake', {height:'24px', width:'24px'}) }}:
			{{ driver.birthDay ? driver.birthDay|date('d-m-Y') : '' }}</div>
		<div>{{ ux_icon('tabler:mail', {height:'24px', width:'24px'}) }}:
			{{ driver.email }}</div>
		<div>{{ ux_icon('tabler:phone', {height:'24px', width:'24px'}) }}:
			{{ driver.telephone }}</div>
		<p>
			<div>Date de creation:{{ driver.createAt ? driver.createAt|date('Y-m-d H:i:s') : '' }}</div>
			<div>Dernier modification:{{ driver.updateAt ? driver.updateAt|date('Y-m-d H:i:s') : '' }}</div>
		</p>
		<p>
			<div>
				Langues Parler:
				{{ driver.language ? driver.language|join(', ') : '' }}
			</div>

		</p>
		<footer>Adresse:
			{{ driver.adress }},
			{{ driver.city }}
			{{ driver.zipCode }},
			{{ driver.country }}</footer>

	</article>

	<a href="{{ path('app_moderator') }}">back to list</a>


	{{ include('driver/_delete_form.html.twig') }}
{% endblock %}
