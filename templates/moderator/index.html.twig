{% extends 'base.html.twig' %}

{% block title %}Hello ModeratorController!
{% endblock %}

{% block body %}
	<h1>Moderation Page</h1>

	<table class="striped">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Name</th>
				<th scope="col">Email</th>
				<th scope="col">Telephone</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for driver in drivers %}
				<tr>
					<th>{{driver.id}}</th>
					<td>{{driver.name}}</td>
					<td>{{driver.email}}</td>
					<td>{{driver.telephone}}</td>
					<td>
						<a href="{{ path('app_moderator_driver_show',{'slug':driver.slug})}}">Voir</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="15">Pas de demande de validation</td>
				</tr>
			{% endfor %}


		</tbody>

	</table>
{% endblock %}
