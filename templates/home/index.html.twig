{% extends 'base.html.twig' %}

{% block title %}VTC Union!
{% endblock %}

{% block body %}

	<h1>Bienvenue</h1>


	<header>
		<div class="header-pictus">

			<img src="{{ asset('/images/header/header.jpg') | imagine_filter('my_fixed_filter') }}" alt="">

		</div>


	</header>

	<a href="{{ path('app_reservation_new',{slug:"null"})}}">Effectuer une Reservation</a>

	<section>
		<h2>Service</h2>


	</section>

	<section>
		<h2>Driver</h2>
		<a role="button" href="{{ path('app_public_all_drivers_show')}}">Tous les drivers</a>
		<div class="home-driver-wrapper-flex">
			{% for driver in drivers %}
				<span class="driver-card">


					<header><img src="{{ asset('/images/uploads/' ~ driver.photo ) | imagine_filter('my_fixed_filter')}} " alt=""></header>

					<body>
						<h3>{{ driver.name }}</h3>
						<h4>{{ driver.firstName}}</h4>
						{{ ux_icon('tabler:building', {height:'18px', width:'18px'}) }}:
						<i>{{ driver.user.compagny.name}}</i>
					</body>

					<footer>

						<a href="{{ path('app_public_driver_show',{slug:driver.slug} )}}">
							<button>Voir</button>
						</a>


					</footer>


				</span>
			{% endfor %}
		</div>
	</section>

	<footer>
		<h3>footer</h3>
	</footer>

{% endblock %}
