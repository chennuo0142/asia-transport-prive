{% apply inline_css(source('@styles/email_reservation_confirmation.css')) %}

<body>
	<div class="corp-message">
		<header>
			<h1 class="brand">Paris Presitge Transport</h1>
		</header>
		<img class="image_header" src="{{ email.image('@email_images/confirmation_reservation-min.jpg') }}" alt="">

		<div class="content">
			<h1>Status de votre reservation</h1>

			<p>
				<span class="label">Bonjour
				</span>
				{{ reservation.name }}
			</p>


			<p>Votre prestataire de service vous indique:
				<h1>{{ status }}</h1>
			</p>

		</div>
	</div>

	<footer>
		<p>Transport By Asia</p>
	</footer>
</body>
{% endapply %}
