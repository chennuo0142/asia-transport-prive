{% extends 'base.html.twig' %}

{% block title %}ProfileUser
{% endblock %}

{% block body %}
	<h1>ProfileUser</h1>
	<img class="profile_photo" src="{{ asset('/images/uploads/' ~ profile_user.photo ) | imagine_filter('my_fixed_filter')}} " alt="">
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ profile_user.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ profile_user.name }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ profile_user.firstName }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ profile_user.pseudo }}</td>
			</tr>

			<tr>
				<th>Birthday</th>
				<td>{{ profile_user.birthday ? profile_user.birthday|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ profile_user.adress }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ profile_user.city }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ profile_user.country }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ profile_user.email }}</td>
			</tr>
			<tr>
				<th>Telephone</th>
				<td>{{ profile_user.telephone }}</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('app_profile_user_index') }}">back to list</a>

	<a href="{{ path('app_profile_user_edit', {'id': profile_user.id}) }}">edit</a>

	{{ include('profile_user/_delete_form.html.twig') }}
{% endblock %}
