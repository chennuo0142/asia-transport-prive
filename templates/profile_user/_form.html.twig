{{ form_start(form) }}
<article>
	{% if app.request.attributes.get('_route' ) == 'app_profile_user_edit'%}
		<img src="{{ asset('/images/uploads/' ~ profile_user.photo ) | imagine_filter('my_thumb_filter')}} " alt="">
	{% endif %}

	{{ form_row(form.photoImage)}}
</article>
{{ form_row(form.name) }}
{{ form_row(form.firstName) }}
{{ form_row(form.pseudo) }}
{{ form_row(form.birthday) }}
{{ form_row(form.adress) }}
{{ form_row(form.city) }}
{{ form_row(form.country) }}
{{ form_row(form.email) }}
{{ form_row(form.telephone) }}

<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
