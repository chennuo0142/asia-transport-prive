{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<h1>Client</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ client.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ client.name }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ client.firstName }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ client.adress }}</td>
			</tr>
			<tr>
				<th>Telephone</th>
				<td>{{ client.telephone }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ client.email }}</td>
			</tr>
			<tr>
				<th>Compagny</th>
				<td>{{ client.compagny }}</td>
			</tr>
			<tr>
				<th>UserId</th>
				<td>{{ client.userId }}</td>
			</tr>
			<tr>
				<th>CreateAt</th>
				<td>{{ client.createAt ? client.createAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdateAt</th>
				<td>{{ client.updateAt ? client.updateAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_client_index') }}">back to list</a>

	<a href="{{ path('app_client_edit', {'slug': client.slug}) }}">edit</a>

	{{ include('client/_delete_form.html.twig') }}
{% endblock %}
