{% extends 'base.html.twig' %}

{% block title %}ServiceListe index{% endblock %}

{% block body %}
    <h1>ServiceListe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service_liste in service_listes %}
            <tr>
                <td>{{ service_liste.id }}</td>
                <td>{{ service_liste.name }}</td>
                <td>{{ service_liste.description }}</td>
                <td>{{ service_liste.price }}</td>
                <td>
                    <a href="{{ path('app_service_liste_show', {'id': service_liste.id}) }}">show</a>
                    <a href="{{ path('app_service_liste_edit', {'id': service_liste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_liste_new') }}">Create new</a>
{% endblock %}
